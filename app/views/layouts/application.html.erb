<!DOCTYPE html>
<html>
  <head>
    <title>GamesSeller</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render "layouts/navbar" %>

    <%= form_with(url: search_games_path, method: :get, local: true) do %>
          <div class="field is-ground mb-5">
            <div class="control is-expanded">
              <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Games') %>
              <%= select_tag 'genres', options_for_select(Genre.all.map{|el| [el.name, el.id]}), :prompt => "All Genres" %>
            </div>
            <div class="control">
              <%=submit_tag("Search", class: "button is-primary")%>
            </div>
          </div>
      <% end %>

    <%= render "layouts/cart" %>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
