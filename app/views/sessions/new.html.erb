<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>
<%= form_with url: sessions_path do |f| %>
<%= f.label :email, style: "display: block" %>
  <%= f.text_field :email %><br>
  <%= f.label :password, style: "display: block" %>
  <%= f.password_field :password %><br>
  <%= link_to "Sign Up", user_new_path %>
  <%= f.submit "Sign In!" %>
<% end %>
