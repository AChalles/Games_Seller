<div id="<%= dom_id game %>">

<h1 class="title is-4"><%= game.name %></h1>
  <p>
    <strong>Genre:</strong>
    <%# <%= game.genre.name %>
    <% if @game != nil %>
    <%= link_to @game.genre.name, @game.genre%>
    <% elsif game != nil %>
    <%= link_to game.genre.name, game.genre%>
    <% end %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= game.description %>
  </p>

  <p>
    <strong>Publish date:</strong>
    <%= game.publish_date %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency game.price/100.0 %>
  </p>



</div>
